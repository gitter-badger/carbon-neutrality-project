<p id="notice"><%= notice %></p>

<h1>Listing Foods</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Red meat</th>
      <th>Poultry</th>
      <th>Seafood</th>
      <th>Vegetables</th>
      <th>Milk</th>
      <th>Other drinks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.profile %></td>
        <td><%= food.red_meat %></td>
        <td><%= food.poultry %></td>
        <td><%= food.seafood %></td>
        <td><%= food.vegetables %></td>
        <td><%= food.milk %></td>
        <td><%= food.other_drinks %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

