<p id="notice"><%= notice %></p>

<h1>Listing Expenses</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Clothing</th>
      <th>Healthcare</th>
      <th>Vehicle</th>
      <th>Home maintenance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.profile %></td>
        <td><%= expense.clothing %></td>
        <td><%= expense.healthcare %></td>
        <td><%= expense.vehicle %></td>
        <td><%= expense.home_maintenance %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

